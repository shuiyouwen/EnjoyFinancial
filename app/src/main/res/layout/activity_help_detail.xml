<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray_ee"
    android:orientation="vertical">

    <include layout="@layout/layout_titlebar_back" />

    <TextView
        android:id="@+id/tv_help_title"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="取现下单相关与具体下单流程"
        android:textColor="@color/font_gray_66"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:background="@android:color/white" />

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="5dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@android:color/white">

            <TextView
                android:id="@+id/tv_solve"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="已解决"
                android:textColor="@color/font_orange_cf"
                android:textSize="18sp" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="17dp"
                android:layout_marginTop="17dp"
                android:background="@color/gray_dc" />

            <TextView
                android:id="@+id/tv_not_solve"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="未解决"
                android:textColor="@color/font_gray_66"
                android:textSize="18sp" />

        </LinearLayout>

    </FrameLayout>

</LinearLayout>