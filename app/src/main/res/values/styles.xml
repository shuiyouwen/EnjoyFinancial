<resources xmlns:ns1="urn:oasis:names:tc:xliff:document:1.2" xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="colorAccent">@android:color/white</item>
    </style>

    <style name="LoginInputStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd" tools:targetApi="jelly_bean_mr1">26dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">26dp</item>
        <item name="android:layout_marginStart" tools:targetApi="jelly_bean_mr1">20dp</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@color/font_gray_cf</item>
        <item name="android:textCursorDrawable">@color/orange_cf</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="NextBtnStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">43dp</item>
        <item name="android:layout_marginLeft">26dp</item>
        <item name="android:layout_marginRight">26dp</item>
        <item name="android:background">@drawable/selector_btn_next</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Font12GrayStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/font_gray_6b</item>
    </style>

    <style name="TranslucentBottomSheetDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/Animation.Design.BottomSheetDialog</item>
    </style>

</resources>
